generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id  Int @id @default(autoincrement())
  username  String
  pw  String
  email String @unique
  jobs_filter Json
  jobs_draft Jobs[]

  @@map("users")
}

model Jobs {
  id  String @id
  user_id Int
  salary  Int
  experience  String
  location  String
  job_type  String
  title String
  contact String
  description String
  company String
  more_description  String
  valid_through Int?
  user  Users @relation(fields: [user_id], references: [id])

  @@map("jobs")
}
